#include<bits/stdc++.h>
using namespace std;

class Stack{
    public:
    int *arr;
    int top;
    int size;

    Stack(int size){
        this->size=size;
        arr=new int[size];
        top=-1; // empty stack
    }

    void push(int data){
        if(top==size-1){
            cout<<"overflow"<<endl;
            return;
        }
        top++;
        arr[top]=data;
    }

    void pop(){
        if(top==-1){
            cout<<"no element to pop, stack is empty"<<endl;
            return;
        }
        top--;
    }

    int peek(){
        if(top==-1){
            cout<<"stack is empty"<<endl;
            return -1;
        }
        return arr[top];
    }

    bool isEmpty(){
        return top==-1;
    }

    void print(){
        for(int i=0;i<=top;i++){
            cout<<arr[i] << " ";
        }
        cout<<endl;
    }
};

int main(){
    Stack s(5);  // define size 5
    s.push(1);
    s.print();
    s.push(2);
    s.print();
    s.push(3);
    s.print();
    s.push(4);
    s.print();
    s.pop();
    s.print();
    cout << "Top element: " << s.peek() << endl;
    cout << "Is empty? " << (s.isEmpty() ? "Yes" : "No") << endl;
    
    return 0;
}


